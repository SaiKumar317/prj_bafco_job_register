import React from "react";
// import "./jobDetails.css";
import { JobContext } from "../../context/JobContext";

function HeaderTabs({ activeHeaderTab, setHeaderTab }) {
  const { selectedJob } = React.useContext(JobContext);

  const renderContent = () => {
    switch (activeHeaderTab) {
      case "Job/Inv":
        return (
          <div className="tab-content">
            <div className="notes-box">
              <p>
                <strong>Job Id:</strong> {selectedJob.jobName},{" "}
                <strong>Date: </strong>
                {selectedJob.docDate}, <strong>Status:</strong>{" "}
                {selectedJob.jobStatus}, <br />
                <strong>Operation:</strong> {selectedJob.operationType},{" "}
                <strong>Branch:</strong> {selectedJob.branch},{" "}
                <strong>Salesman:</strong> {selectedJob.salesman},<br />
                <strong>Customer:</strong> {selectedJob.customerAcc}, <br />
                <strong>POL:</strong> {selectedJob.portLoading},{" "}
                <strong>POD:</strong> {selectedJob.portDestination},{" "}
                <strong>Handled by:</strong> {selectedJob.handleBy},
                <br />
                <strong>Network Type:</strong> {selectedJob.networkType},{" "}
                <strong>Total 20' :</strong> {selectedJob.TotalImportCntr20F},{" "}
                <strong>Total 40' :</strong> {selectedJob.TotalImportCntr40F},
              </p>
            </div>
          </div>
        );

      case "Notes":
        return (
          <div className="tab-content">
            <div className="notes-box">
              <p>
                <strong>Notes:</strong>{" "}
                {selectedJob.notes || "No notes available."}
              </p>
            </div>
            {/* <h4>Notes</h4>
            <textarea
              style={{ width: "100%", height: "100px" }}
              placeholder="Enter notes here..."
            />
            <button className="btn btn-primary">Save Notes</button> */}
          </div>
        );

      case "Move Cost":
        return (
          <div className="tab-content">
            <h4>Move Cost</h4>
            <p>Here you can transfer costs from one job to another.</p>
            <button className="btn btn-warning">Move Cost</button>
          </div>
        );

      case "Goto/Invoice":
        return (
          <div className="tab-content">
            <h4>Goto Invoice</h4>
            <p>Navigate directly to the related invoices.</p>
            <button className="btn btn-info">View Invoice</button>
          </div>
        );

      default:
        return null;
    }
  };

  return (
    <div>
      <div className="header-tabs">
        {["Job/Inv", "Notes"].map((tab) => (
          <button
            key={tab}
            className={`header-tab ${activeHeaderTab === tab ? "active" : ""}`}
            onClick={() => setHeaderTab(tab)}
          >
            {tab}
          </button>
        ))}
      </div>
      <div className="header-tab-content">{renderContent()}</div>
    </div>
  );
}

export default HeaderTabs;
