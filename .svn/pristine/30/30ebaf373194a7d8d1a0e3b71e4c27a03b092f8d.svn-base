/* ---------------- HEADER TABS ---------------- */
.header-tabs {
  display: flex;
  border-bottom: 1px solid #cfcfcf;
  margin-bottom: 5px;
}

.header-tab {
  padding: 6px 16px;
  background: #f2f2f2;
  border: 1px solid #cfcfcf;
  border-bottom: none;
  margin-right: 2px;
  font-size: 13px;
  font-weight: 500;
  color: #333;
  cursor: pointer;
  transition: background 0.2s ease;
}

.header-tab:hover {
  background: #e6e6e6;
}

.header-tab.active {
  background: #fff;
  color: #000;
  border-top: 3px solid #44799b; /* blue top border like in image */
  border-left: 1px solid #cfcfcf;
  border-right: 1px solid #cfcfcf;
  border-bottom: none;
  font-weight: 600;
}


.tab-content {
  /* padding: 12px; */
  background: #fff;
  border: 1px solid #dcdcdc;
  margin-top: -1px;
  min-width: 40vw;
  min-height: 20vh;
}

.body-tab-content {
  padding: 5px;
  background: #fff;
  border: 1px solid #dcdcdc;
  margin-top: -1px;
  min-height: 70vh;
  /* width: 80vh; */
}

.form-row {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 8px;
  flex-wrap: wrap;
}

.form-row label {
  font-size: 13px;
  color: #333;
}

.form-row input[type="text"],
.form-row input[type="date"] {
  border: 1px solid #ccc;
  padding: 4px 6px;
  font-size: 13px;
  border-radius: 3px;
  min-width: 100px;
}

.profit-box {
  background: #e6ffe6;
  border: 1px solid #28a745;
  color: #28a745;
  font-weight: bold;
}
.profit-box.negative {
  background: #ffe6e6;
  border: 1px solid #dc3545;
  color: #dc3545;
}

.notes-box {
  background: #fdf8e4;
  border: 1px solid #f1d48a;
  padding: 10px;
  font-size: 13px;
  /* margin-top: 10px; */
  border-radius: 3px;
}

.btn {
  padding: 6px 12px;
  margin-left: 6px;
  border: none;
  border-radius: 3px;
  font-size: 13px;
  cursor: pointer;
}

.btn-primary {
  background: #007bff;
  color: white;
}

.btn-success {
  background: #28a745;
  color: white;
}

.btn-warning {
  background: #ffc107;
  color: black;
}

.btn-info {
  background: #17a2b8;
  color: white;
}

.job-buttons-below {
  margin-top: 10px;
  /* width: 100%;       */
    /* takes full row */
  display: flex;
  justify-content: flex-end; /* button aligned left */
}

/* ---------------- BODY TABS ---------------- */
.body-tabs {
  display: flex;
  margin-top: 15px;
  border-bottom: 2px solid #dcdcdc;
}

.body-tab {
  padding: 8px 18px;
  background: #f5f5f5;
  border: 1px solid #ccc;
  border-bottom: none;
  margin-right: 6px;
  border-radius: 6px 6px 0 0;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  color: #444;
  transition: all 0.2s ease;
}

.body-tab:hover {
  background: #e9e9e9;
}

.body-tab.active {
  background: #1976d2;   /* blue highlight */
  color: #fff;
  border-color: #1976d2;
  font-weight: 600;
}

.jobdetails-container {
  font-family: Arial, sans-serif;
  font-size: 13px;
  padding: 10px;
}

/* ðŸ”¹ Header */
.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #f9f9f9;
  padding: 8px;
  /* border: 1px solid #ccc; */
  margin-bottom: 8px;
  border-style: solid;
  border-width: 1px;
  border-color: #97b1c2;
  border-radius: 10px;
}

.job-fields {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.job-fields div {
  display: flex;
  flex-direction: column;
}

.job-fields label {
  font-size: 12px;
  margin-bottom: 2px;
}

.profit-box {
  background: #dff6e0;
  padding: 3px 8px;
  border: 1px solid #5cb85c;
  color: #2d7a2d;
  font-weight: bold;
}

.job-buttons {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.job-notes {
  font-size: 12px;
  padding: 6px;
  background: #fefbea;
  border: 1px solid #ccc;
  width: 250px;
}

/* ðŸ”¹ Buttons */
.btn {
  padding: 4px 8px;
  font-size: 12px;
  border: none;
  border-radius: 3px;
  cursor: pointer;
}

.btn-blue { background: #3da6ff; color: #fff; }
.btn-green { background: #4CAF50; color: white; }
.btn-light { background: #eee; color: black; }

/* ðŸ”¹ Tabs */
.tabs {
  display: flex;
  margin: 10px 0;
  border-bottom: 2px solid #ddd;
}

.tab {
  padding: 6px 12px;
  border: 1px solid #ccc;
  border-bottom: none;
  background: #f4f4f4;
  cursor: pointer;
}

.tab.active {
  background: #fff;
  border-top: 3px solid #44799b;
  font-weight: bold;
}

/* ðŸ”¹ Filters */
.filters-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-bottom: 8px;
}

.filters-bar input,
.filters-bar select {
  padding: 4px;
  border: 1px solid #ccc;
  border-radius: 2px;
  font-size: 12px;
}

/* ðŸ”¹ Table */
.job-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 12px;
  background: white;
}

.job-table th {
  /* background: #f1f1f1;
   */
    background: #44799b;
    color: white;
    font-weight: bold;
  padding: 6px;
  border: 1px solid #ccc;
  text-align: left;
}

.job-table td {
  padding: 6px;
  border: 1px solid #ccc;
}

.job-table tbody tr:hover {
  background: #f0eded;
}

.edit-link {
  color: #ff6600;
  cursor: pointer;
  text-decoration: underline;
}

.delete-icon {
  color: red;
  cursor: pointer;
}

#table-header,
 th {
   top: 0;
   position: sticky;
   z-index: 10;
 }

