 }

 
.products-loader-container {
  top: 0;
    left: 0;
    position: fixed;
    width: 100vw;
    /* 100% of the viewport width */
    height: 100vh;
    /* 100% of the viewport height */
    background: rgba(255, 255, 255, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10001;
}
.products-loader-text {
  font-size: 20px;
  font-weight: bold;
  color: #44799b;
}

.input-field {
  font-size: 13px;
  padding: 4px;
  border: 1px solid #93aebf !important;
  border-radius: 4px !important;
  height: 38px !important;
  /* min-width: 150px !important; */
}
.input-field:focus {
  outline: none !important;
  border-color: #44799b !important;
  box-shadow: 0 0 5px rgba(68, 121, 155, 0.5) !important;
}
.input-field:read-only {
  border: 1px solid #ccc !important;
}